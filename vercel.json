{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://api.agrivus.com/api/$1"
    },
    {
      "source": "/((?!assets|_next|favicon|manifest|service-worker|icon).*)$",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
